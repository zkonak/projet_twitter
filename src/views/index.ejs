<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Twitter</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" href="/images/iconTwitter.png">
</head>

<body>
    <section class="section-accueil">

        <div class="tweet-navigation">
            <img class="tweet-navigation-image" src="/images/logoTwitter.png" alt="">
            <div class="tweet-navigation-link">
                <a href="/">
                    <img src="/images/home-run.png" alt="">
                    <h2>Home</h2>
                </a>
                <a href="">
                    <img src="/images/hastag.png" alt="">
                    <h2>Explore</h2>
                </a>
                <a href="">
                    <img src="/images/bookmark.png" alt="">
                    <h2>Bookmarks</h2>
                </a>
                <a href="/myTweets">
                    <img src="/images/user.png" alt="">
                    <h2>My Tweets</h2>
                </a>
                <a href="/signup">
                    <img src="/images/logout.png" alt="">
                    <h2>Sign Up</h2>
                </a>
                <a href="/login">
                    <img src="/images/logout.png" alt="">
                    <h2>LogIn</h2>
                </a>
                <a href="/logout">
                    <img src="/images/logout.png" alt="">
                    <h2>Logout</h2>
                </a>

            </div>
        </div>

        <div class="tweet-container">
            <div class="tweet-container-title">
                <h3>Home</h3>
                <% alerts_warning.forEach(function(warning) { %>
                    <div class="home-error">
                        <%= warning %>
                    </div>
                    <% }); %>

            </div>
            <form action="/addTweet" method="post" class="tweet-container-form">
                <div class="tweet-container-message">
                    <label for="message"></label>
                    <div class="tweet-container-text">
                        <textarea name="message" id="message" placeholder="Whats's happening ?"></textarea>
                    </div>

                </div>
                <div class="tweet-container-button">
                    <button type="submit" class="tweet-button">Tweet</button>
                </div>

            </form>

            <div class="comments">
                <% tweetList.forEach((tweet) => { %>

                    <div class="comments-comment">
                        <a href="/showTweet/<%= tweet.tweet_id %>"><img src="/images/user.png" alt=""></a>
                        <div class="comments-comment-content">
                            <div class="comments-comment-content-nameDate">
                                <a href="/tweets/<%= tweet.user_id %>">
                                    <h3 class="comments-comment-content-username">
                                        <%= tweet.username %>
                                    </h3>
                                </a>
                                <span class="comments-comment-content-date"><%= tweet.date %></span>
                            </div>
                            <a href="/showTweet/<%= tweet.tweet_id %>">
                                <p class="comments-comment-content-text">
                                    <%= tweet.message %>
                                </p>
                            </a>
                        </div>
                    </div>
                    <% }) %>
            </div>

        </div>

        <div class="tweet-search"></div>

    </section>
</body>

</html>